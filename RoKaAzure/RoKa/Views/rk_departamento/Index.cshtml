@model IEnumerable<RoKa.Models.rk_departamento>

@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Departamentos</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<p>
    @Html.ActionLink("Create New", "Create" ,null,htmlAttributes: new { @Class = "btn btn-primary" })
</p>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Lista de Departamentos
            </div>
            <div class="panel-body">
                <div class="row">


                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.rk_pais.descripcion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.descripcion)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.rk_pais.descripcion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.descripcion)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.iddepartamento }, htmlAttributes: new { @Class = "btn btn-primary btn-xs" }) 
                                    @Html.ActionLink("Details", "Details", new { id = item.iddepartamento }, htmlAttributes: new { @Class = "btn btn-primary btn-xs" }) 
                                    @Html.ActionLink("Delete", "Delete", new { id = item.iddepartamento }, htmlAttributes: new { @Class = "btn btn-primary btn-xs" }) 
                                </td>
                            </tr>
                        }

                    </table>

                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
