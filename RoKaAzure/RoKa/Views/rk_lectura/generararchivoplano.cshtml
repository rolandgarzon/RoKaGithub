@model RoKa.Models.rk_lectura

@{
    ViewBag.Title = "generararchivoplano";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Generar Archivo de Lecturas</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Permite generar el archivo de lecturas tomadas
            </div>
            <br />
            @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="panel-heading">
                    Año
                    <input type="text" name="ano" id="ano" />
                    @Html.ValidationMessage("ano", "", new { @class = "text-danger" })
               </div>
                <div class="panel-heading">
                    Mes
                    <input type="text" name="mes" id="mes" />
                    @Html.ValidationMessage("mes", "", new { @class = "text-danger" })
                </div>
                <div class="panel-heading">
                    Ciclo
                    @Html.DropDownList("ciclofacturacion")
                </div>

                <div class="panel-heading">
                    Terminal Portatil
                    @Html.DropDownList("terminalportatil")
                </div>

                <div class="panel-heading">
                    <input type="submit" value="Generar Archivo" />
                </div>
            }
            <div class="panel-body">
                <div class="row">
                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    </div>



                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

