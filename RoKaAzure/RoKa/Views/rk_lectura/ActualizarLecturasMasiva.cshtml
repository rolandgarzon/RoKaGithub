@model IEnumerable<RoKa.Models.rk_lectura>

@{
    ViewBag.Title = "ActualizarLecturasMasivas";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Actualizar Lecturas Masivas</h1>
    </div>
</div>


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Permite actualizar lecturas por rango de ruta de lectura
            </div>
            <br />
            @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="panel-heading">
                    Año
                    <input type="text" name="ano" id="ano" />
                    @Html.ValidationMessage("ano", "", new { @class = "text-danger" })
                </div>
                <div class="panel-heading">
                    Mes
                    <input type="text" name="mes" id="mes" />
                    @Html.ValidationMessage("mes", "", new { @class = "text-danger" })
                </div>
                <div class="panel-heading">
                    Ciclo
                    @Html.DropDownList("ciclofacturacion")
                </div>

                <div class="panel-heading">
                    Ruta Inicial
                    <input type="text" name="rutainicial" id="rutainicial" />
                    @Html.ValidationMessage("ano", "", new { @class = "text-danger" })
                </div>

                <div class="panel-heading">
                    Ruta Final
                    <input type="text" name="rutafinal" id="rutafinal" />
                    @Html.ValidationMessage("ano", "", new { @class = "text-danger" })
                </div>

                <div class="panel-heading">
                    <input type="submit" value="Consultar" />
                </div>
            }
            <div class="panel-body">
                <div class="row">
                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
@if (Model != null)
{
<!-- aqui meto la tabla -->
<table class="table table-striped table-bordered" id="tbllecturas" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idsuscriptor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.rutalectura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.lecturatomada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idobservacionlectura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.lecturafacturada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.observacionfacturada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.informacionadicional)
            </th>
        </tr>
    </thead>

    <tfoot>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idsuscriptor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.rutalectura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.lecturatomada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idobservacionlectura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.lecturafacturada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.observacionfacturada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.informacionadicional)
            </th>
        </tr>
    </tfoot>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.idsuscriptor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.rutalectura)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.lecturatomada)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.rk_observacioneslectura.descripcion)
                </td>
                <td>
                    <input type="text" id="row-1-age" name="row-1-age" value=@Html.DisplayFor(modelItem => item.lecturafacturada)>
                </td>
                <td>
                    <select size="1" id="row-1-office" name="row-1-observacion">
                        <option value=@Html.DropDownList("observaciondelectura")>
                    </select>
                </td>
                <td>
                    <input type="text" id="row-1-age" name="row-1-age" value=@Html.DisplayFor(modelItem => item.informacionadicional)>
                </td>
            </tr>
        }
    </tbody>

</table>
}