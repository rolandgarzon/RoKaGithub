@model RoKa.Models.rk_lectura

@{
    ViewBag.Title = "CargarArchivoPlano";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Cargar Archivo de Lecturas</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Permite leer el archivo de lectura para ser cargado en las maquinas
            </div>
            <br/>
            @using (Html.BeginForm(null,null,FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="panel-heading">
                    Año 
                    <input type="text" name="ano" id="ano" />
                    @Html.ValidationMessage("ano", "", new { @class = "text-danger" })
                </div>
                <div class="panel-heading">
                    Mes
                    <input type="text" name="mes" id="mes" />
                    @Html.ValidationMessage("mes", "", new { @class = "text-danger" })
                </div>
                <div class="panel-heading">
                    Ciclo
                    @Html.DropDownList("ciclofacturacion")
                </div>

                <div class="panel-heading">
                    Terminal Portatil
                    @Html.DropDownList("terminalportatil")
                </div>

                <div class="panel-heading">
                <input type="file" name="archivolectura" id="archivolectura" />
                </div>

                <div class="panel-heading">
                    <input type="submit" value="enviar" />
                </div>

                if (ViewBag.ok != null)
                {
                    <div class="panel-heading">
                        Se cargaron @Html.Label((string)ViewBag.ok) existosamente, y se presentaron @Html.Label((string)ViewBag.error) inconsistencias
                    </div>
                }

                if (ViewBag.errorArchivo != null)
                {
                    <div class="panel-heading">
                        El Archivo presenta inconsistencias por favor verificar.
                    </div>
                }


            }
            <div class="panel-body">
                <div class="row">
                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    </div>



                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
